<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
>
    <Style x:Key="ButtonMaterial" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource MaterialDesignBackground}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth0"/>

        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Background" Value="#FF72CCC3"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>

        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontSize" Value="17"/>
    </Style>

</ResourceDictionary>